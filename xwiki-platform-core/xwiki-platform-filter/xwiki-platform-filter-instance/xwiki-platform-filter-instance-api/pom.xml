<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-filter-instance</artifactId>
    <version>10.5-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-platform-filter-instance-api</artifactId>
  <name>XWiki Platform - Filter - Instance - API</name>
  <description>Extract data from the current XWiki instance</description>
  <properties>
    <xwiki.jacoco.instructionRatio>0.00</xwiki.jacoco.instructionRatio>

    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>Filter XWiki Instance module</xwiki.extension.name>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-filter-api</artifactId>
      <version>${commons.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-filter-event-model</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-model</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <!-- Apply the Checkstyle configurations defined in the top level pom.xml file -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <executions>
          <execution>
            <!-- Specify the "default" execution id so that the "blocker" one is always executed -->
            <id>default</id>
            <configuration>
              <excludes>
                org/xwiki/filter/instance/input/AbstractEntityEventGenerator.java,
                org/xwiki/filter/instance/input/AbstractInstanceInputEventGenerator.java,
                org/xwiki/filter/instance/input/EntityEventGenerator.java,
                org/xwiki/filter/instance/internal/InstanceModel.java,
                org/xwiki/filter/instance/internal/InstanceUtils.java,
                org/xwiki/filter/instance/internal/input/AbstractBeanEntityEventGenerator.java,
                org/xwiki/filter/instance/internal/input/InstanceInputProperties.java,
                org/xwiki/filter/instance/internal/input/InstanceInputFilterStreamFactory.java,
                org/xwiki/filter/instance/internal/output/InstanceOutputFilterStreamFactory.java,
                org/xwiki/filter/instance/output/OutputInstanceFilterStreamFactory.java
              </excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
