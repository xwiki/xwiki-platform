<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-url</artifactId>
    <version>15.10.12</version>
  </parent>
  <artifactId>xwiki-platform-url-api</artifactId>
  <name>XWiki Platform - URL - API</name>
  <packaging>jar</packaging>
  <description>Allows configuration of the URL scheme used by XWiki to parse/serialize URLs and security management of external URLs</description>
  <properties>
    <xwiki.jacoco.instructionRatio>0.57</xwiki.jacoco.instructionRatio>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>URL API</xwiki.extension.name>
    <!-- Category to display in the Extension Manager -->
    <xwiki.extension.category>api</xwiki.extension.category>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-configuration-api</artifactId>
      <version>${commons.version}</version>
    </dependency>
    <!-- TODO: Used to access EscapeTool. We need to fix this by introducing a new xwiki-commons-url module and
         add a URIUtils class there (and also move stuff from this module that can be moved there, like ExtendedURL)
         and then refactory EscapeTool to use that new module -->
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-velocity</artifactId>
      <version>${commons.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-resource-default</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Testing Dependencies -->
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-tool-test-component</artifactId>
      <version>${commons.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
