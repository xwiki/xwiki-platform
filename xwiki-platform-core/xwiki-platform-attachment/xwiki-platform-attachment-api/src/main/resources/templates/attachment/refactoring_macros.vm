#macro (displaySourceAttachment) 
<dt>
  <label>$services.localization.render('attachment.move.source.label')</label>
  <span class="xHint">$services.localization.render('attachment.move.source.hint')</span>
</dt>
<dd>
  #hierarchy($attachment)
##  <input type="hidden" name="sourceWikiName" value="$!escapetool.xml($doc.wiki)"/>
##  <input type="hidden" name="sourceSpaceName" value="$!escapetool.xml($doc.space)"/>
##  <input type="hidden" name="sourcePageName" value="$!escapetool.xml($doc.documentReference.name)"/>
  <input type="hidden" name="sourceLocation" 
          value="$!escapetool.xml($services.model.serialize($doc.documentReference, 'default'))" />
  <input type="hidden" name="sourceAttachmentName" value="$!escapetool.xml($attachment.name)"/>
</dd>
#end

#macro (displayAttachmentLinksCheckbox)
  #set ($hidden = !$isAdvancedUser && !$isSuperAdmin)
  ## We hide this option for simple users (instead of simply removing it) because we want to submit the default value
  ## (i.e. we want to make sure the links are updated for simple users).
<dt#if ($hidden) class="hidden"#end>
  <label>
    #set ($checked = !$request.updateLinks || $request.updateLinks == 'true')
    <input type="checkbox" name="updateLinks" value="true" #if ($checked)checked="checked"#end />
    $services.localization.render('attachment.move.links.label')
  </label>
  ## The value submitted when the checkbox is not checked, used to preserve the form state.
  <input type="hidden" name="updateLinks" value="false"/>
</dt>
<dd#if ($hidden) class="hidden"#end>
  ## TODO: update once a backlink management mechanism is in place.
  #set ($backLinksCount = 0)
  #set ($backLinksURL = '')
  <span class="xHint">
    $services.localization.render('attachment.move.links.hint', ["<a href='$backLinksURL'>", $backLinksCount, '</a>'])
  </span>
</dd>
#end
