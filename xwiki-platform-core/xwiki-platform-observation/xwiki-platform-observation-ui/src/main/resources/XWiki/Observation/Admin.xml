      <codeToExecute>(% class="noitems" %)
{{translation key="observation.remote.admin.intro" /}}

{{velocity}}
#macro(displayMember $member)
$member.id#if ($member.id == $remoteObservation.id) //({{translation key="observation.remote.admin.channel.leader.current"/}})//#end

#end
#set($remoteObservation = $services.observation.remote)
; {{translation key="observation.remote.admin.id"/}}
: $services.rendering.escape($remoteObservation.id, 'xwiki/2.1')
; {{translation key="observation.remote.admin.networkAdapter"/}}
: {{translation key="observation.remote.admin.networkAdapter.${remoteObservation.adapterId}.name"/}}

#set($channels = $remoteObservation.channels)
#if ($channels)
  == {{translation key="observation.remote.admin.channels"/}}

  #foreach ($channel in $channels)
    {{box}}
    ; {{translation key="observation.remote.admin.channel.id"/}}
    : $services.rendering.escape($channel.id, 'xwiki/2.1')
    ; {{translation key="observation.remote.admin.channel.leader"/}}
    : #displayMember($channel.leader)

    === {{translation key="observation.remote.admin.channel.members"/}}

$escapetool.h$escapetool.h

    #foreach ($member in $channel.members)
      * #displayMember($member)
    #end
  #end
#else
  {{info}}{{translation key="observation.remote.admin.channels.none"/}}{{/info}}
#end
{{/velocity}}</codeToExecute>
