<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.xwiki.platform</groupId>
        <artifactId>xwiki-platform-eventstream-stores</artifactId>
        <version>12.4-SNAPSHOT</version>
    </parent>
    <artifactId>xwiki-platform-eventstream-store-hibernate</artifactId>
    <name>XWiki Platform - Event Stream - Store - Hibernate</name>
    <description>Hibernate based events storage</description>
    <properties>
        <xwiki.jacoco.instructionRatio>0.18</xwiki.jacoco.instructionRatio>
        <xwiki.pitest.mutationThreshold>8</xwiki.pitest.mutationThreshold>
        <!-- Name to display by the Extension Manager -->
        <xwiki.extension.name>Hibernate Event Stream Store</xwiki.extension.name>

        <!-- Impossible to have both xwiki-platform-eventstream and xwiki-platform-activitystream-api
             because they use the same table name (activitystream_events) -->
        <xwiki.extension.features>org.xwiki.platform:xwiki-platform-activitystream-api</xwiki.extension.features>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.xwiki.platform</groupId>
            <artifactId>xwiki-platform-eventstream-store-common</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>org.xwiki.commons</groupId>
            <artifactId>xwiki-commons-tool-test-component</artifactId>
            <version>${commons.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default</id>
                        <configuration>
                            <excludes>
                                org/xwiki/eventstream/store/internal/DocumentEventRecorder.java,
                                org/xwiki/eventstream/store/internal/LegacyEventStatusManager.java
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
