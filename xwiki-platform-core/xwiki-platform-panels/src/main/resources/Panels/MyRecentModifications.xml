<property>
<content>{{velocity}}
#set ($recentDocs = $xwiki.searchDocuments('where 1=1 and doc.author=? order by doc.date desc', 5, 0, [$xcontext.user]))
#if ($recentDocs.size() &gt; 0 || $showEmptyPanels)
  #panelheader($msg.get('xe.panels.modifications.my'))
  #foreach ($docname in $recentDocs)
    #set ($rdoc = $xwiki.getDocument($docname).getTranslatedDocument())
    #if ($foreach.index &gt; 0)
      (% class="pitemseparator" %) ~| (%%)##
    #end
    (% class="panelitem" %)[[$rdoc.plainTitle&gt;&gt;$rdoc]](%%)##
  #end
  #panelfooter()
#end
{{/velocity}}</content>
