{
  "name": "@xwiki/platform-tool-eslintconfig",
  "version": "18.1.0-rc-1",
  "license": "LGPL 2.1",
  "author": "XWiki Org Community <contact@xwiki.org>",
  "homepage": "https://xwiki.org/",
  "repository": {
    "type": "git",
    "directory": "xwiki-platform-core/xwiki-platform-node/src/main/node/tools/tool-eslintconfig",
    "url": "git+https://github.com/xwiki/xwiki-platform.git"
  },
  "bugs": {
    "url": "https://jira.xwiki.org/projects/XWIKI/"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "!src/**/*.spec.*",
    "!src/**/*.test.*",
    "!src/**/__tests__"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist",
    "lint": "eslint \"./src/**/*.{ts,tsx,vue}\" --max-warnings=0"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@eslint/config-helpers": "catalog:",
    "@eslint/js": "catalog:",
    "eslint-import-resolver-typescript": "catalog:",
    "eslint-plugin-headers": "catalog:",
    "eslint-plugin-import": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-promise": "catalog:",
    "eslint-plugin-tsdoc": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "typescript-eslint": "catalog:",
    "vue-eslint-parser": "catalog:"
  },
  "devDependencies": {
    "eslint": "catalog:",
    "vite": "catalog:"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.es.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.umd.js"
        }
      }
    },
    "main": "./dist/index.es.js",
    "types": "./dist/index.d.ts"
  }
}
