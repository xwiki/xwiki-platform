<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.xwiki.org/index"
  xmlns:index="http://www.xwiki.org/index" elementFormDefault="qualified">

  <!--
  *
  * Types
  *
  -->

  <complexType name="PinnedChildPage">
    <annotation>
      <documentation>Stores information about a pinned page.</documentation>
    </annotation>
    <sequence>
      <element name="reference" type="string"/>
      <element name="index" type="int"/>
    </sequence>
  </complexType>

  <complexType name="PinnedChildPages">
    <annotation>
      <documentation>Stores a collection of pinned child page.</documentation>
    </annotation>
    <sequence>
      <element name="pinnedChildPage" type="index:PinnedChildPage" minOccurs="0" maxOccurs="unbounded"/>
    </sequence>
  </complexType>

  <!--
  *
  * Elements
  *
  -->

  <element name="pinnedChildPages" type="index:PinnedChildPages"/>
</schema>