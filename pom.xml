              </extensionOverride>
              <extensionOverride>
                <!-- Open Java is the same as JSON-Java but with a different license -->
                <id>com.tdunning:json</id>
                <features>org.json:json/20180130</features>
              </extensionOverride>
              <extensionOverride>
