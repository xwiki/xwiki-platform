<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.xwiki.org/netflux"
    xmlns:netflux="http://www.xwiki.org/netflux" elementFormDefault="qualified">

  <!--
  *
  * Types
  *
  -->

  <complexType name="EntityReference">
    <simpleContent>
      <extension base="string">
        <attribute name="type" type="string"></attribute>
      </extension>
    </simpleContent>
  </complexType>

  <complexType name="EntityChannel">
    <sequence>
      <element name="entityReference" type="netflux:EntityReference"></element>
      <element name="path" type="string" minOccurs="0" maxOccurs="unbounded"></element>
      <element name="key" type="string" minOccurs="0" maxOccurs="1"></element>
      <element name="userCount" type="int" minOccurs="0" maxOccurs="1"></element>
    </sequence>
  </complexType>

  <!--
  *
  * Elements
  *
  -->

  <element name="entityChannel" type="netflux:EntityChannel"></element>
</schema>