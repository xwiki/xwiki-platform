.#--------------------------------------------------------------------------------------
.input|xwiki/2.0
.# Verify we can force a table cell to have empty new lines using the special \\ symbol.
.#--------------------------------------------------------------------------------------
|=cell1\\cell1bis
|cell2
\\cell2bis
.#-----------------------------------------------------
.expect|event/1.0
.#-----------------------------------------------------
beginDocument
beginTable
beginTableRow
beginTableHeadCell
onWord [cell1]
onNewLine
onWord [cell1bis]
endTableHeadCell
endTableRow
beginTableRow
beginTableCell
onWord [cell2]
onNewLine
onNewLine
onWord [cell2bis]
endTableCell
endTableRow
endTable
endDocument
.#-----------------------------------------------------
.expect|xhtml/1.0
.#-----------------------------------------------------
<table><tr><th>cell1<br/>cell1bis</th></tr><tr><td>cell2<br/><br/>cell2bis</td></tr></table>
.#-----------------------------------------------------
.expect|xwiki/2.0
.#-----------------------------------------------------
|=cell1
cell1bis
|cell2
\\cell2bis
.#-----------------------------------------------------
.input|xhtml/1.0
.#-----------------------------------------------------
<html><table><tr><th>cell1<br/>cell1bis</th></tr><tr><td>cell2<br/><br/>cell2bis</td></tr></table></html>