<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-flamingo-skin</artifactId>
    <version>18.2.0-SNAPSHOT</version>
  </parent>
  <packaging>webjar-node</packaging>
  <artifactId>xwiki-platform-flamingo-skin-designsystem</artifactId>
  <name>XWiki Platform - Flamingo - Skin - Design System</name>
  <properties>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>Flamingo Design System</xwiki.extension.name>
    <!-- Category for the Extension Manager -->
    <xwiki.extension.category>webjar</xwiki.extension.category>
    <!-- Vite is already taking care of minification and bundling in an efficient way. -->
    <xwiki.minification.skip>true</xwiki.minification.skip>
    <xwiki.extension.javascript.modules.importmap>{
        "inversify": "org.webjars.npm:inversify/lib/esm/index.js",
        "@inversifyjs/common": "org.webjars.npm:inversifyjs__common/lib/esm/index.js",
        "@inversifyjs/container": "org.webjars.npm:inversifyjs__container/lib/esm/index.js",
        "@inversifyjs/core": "org.webjars.npm:inversifyjs__core/lib/esm/index.js",
        "@inversifyjs/reflect-metadata-utils": "org.webjars.npm:inversifyjs__reflect-metadata-utils/lib/esm/index.js",
        "@inversifyjs/plugin": "org.webjars.npm:inversifyjs__plugin/lib/esm/index.js",
        "@inversifyjs/prototype-utils": "org.webjars.npm:inversifyjs__prototype-utils/lib/esm/index.js",
        "reflect-metadata": "org.webjars.npm:reflect-metadata/Reflect.js"
    }</xwiki.extension.javascript.modules.importmap>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>inversify</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>reflect-metadata</artifactId>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
</project>