&lt;script type="text/javascript"&gt;
&lt;!--
function updateName(field1, field2, removeclass) {
  var name = field1.value;
  name = name.replace(/[אגה]/gi,"a")
  name = name.replace(/[יטךכ]/gi,"e")
  name = name.replace(/[מן]/gi,"i")
  name = name.replace(/[פצ]/gi,"o")
  name = name.replace(/[ש]/gi,"u")
  name = name.replace(/["!?]/g,"");
  name = name.replace(/[_':]/g," ");
  if (removeclass!=false)
   name = name.replace(/class$/gi,"");
  if (navigator.userAgent.indexOf("Safari")==-1) {
   name = name.replace(/\s(.)/g,function(str, p1) { return p1.toUpperCase(); });
   name = name.replace(/^(.)/g,function(str, p1) { return p1.toUpperCase(); });
  }
  name = name.replace(/\s+/g,"");
  if (field2 == null) {
         field1.value = name;
     } else {
         field2.value = name;
     }
  if (name=="")
   return false;
  return true;
}
// --&gt;
&lt;/script&gt;
