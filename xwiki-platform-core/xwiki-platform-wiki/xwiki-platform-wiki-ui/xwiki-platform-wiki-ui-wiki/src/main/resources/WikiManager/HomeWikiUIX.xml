    <property>
      <content>{{velocity}}{{html clean="false"}}
  ##
  ## A link to the home wiki
  ##
  ## Displayed if:
  ## * the wiki accept global users (ie it does not handle only local users)
  ## * the current user is global
  ## * the home page of the main wiki exists
  ## * the current user has the right to see the homepage of the main wiki
  #set ($mainWikiHomeDocumentReference = $services.wiki.mainWikiDescriptor.mainPageReference)
  #if ("$!services.wiki.user.userScope" != 'LOCAL_ONLY' &amp;&amp; $xcontext.userReference.wikiReference.name == $services.wiki.mainWikiId &amp;&amp; $xwiki.exists($mainWikiHomeDocumentReference) &amp;&amp; $services.security.authorization.hasAccess('view', $mainWikiHomeDocumentReference))
    #template('drawer_macros.vm')
    #drawerItem($xwiki.getURL($mainWikiHomeDocumentReference), 'home', $escapetool.xml($services.localization.render('platform.wiki.drawer.homeWiki')))
  #end
{{/html}}{{/velocity}}
</content>
