    <property>
      <code>require([
  'jquery',
  'xwiki-meta',
  'vue',
  'xwiki-platform-notifications-webjar',
  'xwiki-l10n!notifications-custom-filters-preferences-macro-translation-keys',
  'xwiki-events-bridge'
], function ($, xm, Vue, notifications, l10n) {
  Vue.component('DisplayerToggle', notifications.DisplayerToggle);
  Vue.component('DisplayerScope', notifications.DisplayerScope);
  Vue.component('DisplayerStaticList', notifications.DisplayerStaticList);

  // Globals
  var serviceReference = XWiki.Model.resolve('XWiki.Notifications.Code.NotificationPreferenceService',
    XWiki.EntityType.DOCUMENT);
  var serviceURL = new XWiki.Document(serviceReference).getURL('get', 'outputSyntax=plain');
  const customFilterPreferences = $('.customFilterPreferences');
  var target = customFilterPreferences.attr('data-target');

  var postParams = {
    csrf: xm.form_token,
    target: target
  };
  if (target === 'user') {
    postParams['user'] = customFilterPreferences.attr('data-user');
  }

  $(document).on('click', '#notificationCustomFilterPreferencesLiveData .action_delete', function (event) {
    event.preventDefault();
    const liveDataEntryId = $(this).parents('[data-livedata-entry-id]').data('livedata-entry-id');
    new XWiki.widgets.ConfirmationBox({
      onYes: function () {
        var notif = new XWiki.widgets.Notification(l10n['filters.preferences.delete.inProgress'], 'inprogress');
        var params = {
          action: 'deleteFilterPreference',
          filterPreferenceId: liveDataEntryId
        };
        $.post(serviceURL, $.extend({}, params, postParams)).then(() =&gt; {
          notif.replace(new XWiki.widgets.Notification(l10n['filters.preferences.delete.done'], 'done'));
          $('#notificationCustomFilterPreferencesLiveData').data('liveData').updateEntries();
        }).catch(() =&gt; {
          notif.replace(new XWiki.widgets.Notification(l10n['filters.preferences.delete.error'], 'error'));
        });
      }
    });
  });

  function save(checked, filterPreferenceId, serviceURL) {
    return new Promise((resolve) =&gt; {
      const notif = new XWiki.widgets.Notification(l10n['filters.preferences.setEnabled.inProgress'], 'inprogress');
      const params = {
        action: 'setFilterPreferenceEnabled',
        filterPreferenceId: filterPreferenceId,
        enabled: checked
      };
      $.post(serviceURL, $.extend({}, params, postParams)).then(() =&gt; {
        notif.replace(new XWiki.widgets.Notification(l10n['filters.preferences.setEnabled.done'], 'done'));
        resolve({checked})
      }).catch(() =&gt; {
        notif.replace(new XWiki.widgets.Notification(l10n['filters.preferences.setEnabled.error'], 'error'));
        resolve({checked: !checked})
      });
    });
  }

  $(document).on('xwiki:livedata:toggle', '#notificationCustomFilterPreferencesLiveData', (event) =&gt; {
    const detail = event.detail;
    const data = detail.data
    save(detail.checked, data.preferenceId, serviceURL).then(({checked}) =&gt; {
      detail.callback({
        ...detail,
        checked: checked
      });
    });
  });
});</code>
