<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-distribution-flavor</artifactId>
    <version>15.10.11-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-platform-distribution-flavor-mainwiki</artifactId>
  <name>XWiki Platform - Distribution - Flavor - Main Wiki</name>
  <packaging>xar</packaging>
  <description>${xwiki.extension.distribution.ui.summary}</description>
  <properties>
    <xwiki.extension.category>flavor</xwiki.extension.category>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>${xwiki.extension.distribution.ui.name}</xwiki.extension.name>
    <!-- Should only be installed on main wiki -->
    <xwiki.extension.namespaces>wiki:xwiki</xwiki.extension.namespaces>
    <xwiki.extension.features>
        <!-- Make sure to replace the old XE flavor -->
        org.xwiki.enterprise:xwiki-enterprise-ui-mainwiki,
        <!-- Replace old XEM flavor -->
        com.xpn.xwiki.products:xwiki-enterprise-manager-wiki-administrator,
        org.xwiki.manager:xwiki-enterprise-manager-wiki-administrator,
        org.xwiki.manager:xwiki-manager-wiki-administrator,
        org.xwiki.manager:xwiki-manager-ui
    </xwiki.extension.features>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-distribution-flavor-common</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-wiki-ui-mainwiki</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-menu-ui</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
      <optional>true</optional>
    </dependency>
    <!-- Add the Mail Resending UI. It's only added in the main wiki XS flavor so that it's not installed
         in subwikis (as we want a single mail resender located in the main wiki) -->
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-mail-resender-ui</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
    </dependency>
  </dependencies>
</project>
