#set ($enumValues = $displayer.value.values())
#if (!$enumValues)
  ## We attempt to read the list of enum values from the enum type, which is currently forbidden, but at least it will
  ## generate a warning in the logs that will help us investigate the problem.
  #set ($enumValues = $displayer.type.getEnumConstants())
#end
<select
  #foreach ($parameter in $displayer.parameters.entrySet())
    $escapetool.xml($parameter.key)="$!escapetool.xml($parameter.value)"
  #end
>
  #set ($translationKeyPrefix = $displayer.type.getName() + '.')
  #foreach ($enumValue in $enumValues)
    #set ($value = $enumValue.name())
    #set ($translationKey = $translationKeyPrefix + $value)
    #if ($services.localization.get($translationKey))
      #set ($label = $services.localization.render($translationKey))
    #else
      #set ($label = $enumValue.toString())
      #if ($label == $value && $value == $value.toUpperCase())
        ## Show something nicer than the upper case value.
        #set ($label = $stringtool.capitalize($label.toLowerCase().replace('_', ' ')))
      #end
    #end
    <option value="$escapetool.xml($value)"#if ($value.equalsIgnoreCase($displayer.value)) selected#end>
      $escapetool.xml($label)
    </option>
  #end
</select>
