{
  "name": "@manuelleducorg/editors-blocknote-react",
  "version": "0.0.2",
  "license": "LGPL 2.1",
  "author": "XWiki Org Community <contact@xwiki.org>",
  "homepage": "https://xwiki.org/",
  "repository": {
    "type": "git",
    "directory": "xwiki-platform-node/src/main/node/core/editors/blocknote-react",
    "url": "git+https://github.com/xwiki/xwiki-platform.git"
  },
  "bugs": {
    "url": "https://jira.xwiki.org/projects/XWIKI/"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.tsx"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "main": "./src/index.tsx",
  "scripts": {
    "api-extractor:local": "api-extractor run --local",
    "build": "vite build",
    "clean": "rimraf dist",
    "lint": "eslint \"./src/**/*.{ts,tsx,vue}\" --max-warnings=0",
    "test": "playwright install; playwright test -c playwright-ct.config.ts",
    "typecheck": "tsc"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@blocknote/core": "catalog:",
    "@blocknote/mantine": "catalog:",
    "@blocknote/react": "catalog:",
    "@mantine/core": "catalog:",
    "@mantine/hooks": "catalog:",
    "@types/react-dom": "catalog:",
    "@manuelleducorg/attachments-api": "workspace:*",
    "@manuelleducorg/collaboration-api": "workspace:*",
    "@manuelleducorg/document-api": "workspace:*",
    "@manuelleducorg/fn-utils": "workspace:*",
    "@manuelleducorg/link-suggest-api": "workspace:*",
    "@manuelleducorg/macros-api": "workspace:*",
    "@manuelleducorg/macros-ast-react-jsx": "workspace:*",
    "@manuelleducorg/model-api": "workspace:*",
    "@manuelleducorg/model-reference-api": "workspace:*",
    "@manuelleducorg/model-remote-url-api": "workspace:*",
    "@manuelleducorg/uniast-markdown": "workspace:*",
    "i18next": "catalog:",
    "lodash-es": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-i18next": "catalog:",
    "react-icons": "catalog:"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "catalog:",
    "@types/lodash-es": "catalog:",
    "@types/react": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@manuelleducorg/dev-config": "workspace:*",
    "eslint": "catalog:",
    "postcss": "catalog:",
    "postcss-preset-mantine": "catalog:",
    "postcss-simple-vars": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue-tsc": "catalog:"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.es.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.umd.js"
        }
      },
      "./dist/*.css": {
        "import": "./dist/*.css",
        "require": "./dist/*.css"
      }
    },
    "main": "./dist/index.es.js",
    "types": "./dist/index.d.ts"
  }
}
