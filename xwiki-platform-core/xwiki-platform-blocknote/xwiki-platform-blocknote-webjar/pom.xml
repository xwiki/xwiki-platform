<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-blocknote</artifactId>
    <version>17.6.0-SNAPSHOT</version>
  </parent>
  <packaging>webjar</packaging>
  <artifactId>xwiki-platform-blocknote-webjar</artifactId>
  <name>XWiki Platform - BlockNote - WebJar</name>
  <properties>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>BlockNote WebJar</xwiki.extension.name>
    <!-- Category for the Extension Manager -->
    <xwiki.extension.category>webjar</xwiki.extension.category>
     <!-- Vite is already taking care of minification and bundling in an efficient way. -->
    <xwiki.minification.skip>true</xwiki.minification.skip>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>requirejs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>jquery</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>vue</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>vue-i18n</artifactId>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <!-- We keep the Vue files and the build configuration files in separate folders in the source tree but
              we need them in the same folder when building the Vue components. -->
            <id>copy-vue-resources</id>
            <phase>validate</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/node</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/node</directory>
                  <excludes>
                    <exclude>dist</exclude>
                    <exclude>node_modules</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <!-- Update pnpm-lock.yaml -->
            <id>copy-pnpm-lock</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>
                src/main/node
              </outputDirectory>
              <resources>
                <resource>
                  <directory>${project.build.directory}/node/</directory>
                  <includes>
                    <include>pnpm-lock.yaml</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <!-- Copy the generated Vue components to the WebJar folder. -->
            <id>copy-vue-components</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>
                ${project.build.outputDirectory}/META-INF/resources/webjars/${project.artifactId}/${project.version}
              </outputDirectory>
              <resources>
                <resource>
                  <directory>${project.build.directory}/node/dist</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Skip jsHint because we use ESLint through the frontend-maven-plugin -->
      <plugin>
        <groupId>org.xwiki.contrib</groupId>
        <artifactId>jshint-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>default-lint</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>install-node-and-pnpm</id>
            <goals>
              <goal>install-node-and-pnpm</goal>
            </goals>
            <configuration>
              <nodeVersion>${node.version}</nodeVersion>
              <pnpmVersion>${pnpm.version}</pnpmVersion>
            </configuration>
          </execution>
          <execution>
            <id>pnpm-install</id>
            <goals>
              <goal>pnpm</goal>
            </goals>
            <configuration>
              <arguments>install</arguments>
            </configuration>
          </execution>
          <execution>
            <id>pnpm-run-lint</id>
            <goals>
              <goal>pnpm</goal>
            </goals>
            <configuration>
              <arguments>run lint</arguments>
            </configuration>
            <phase>test</phase>
          </execution>
          <execution>
            <id>pnpm-run-test</id>
            <goals>
              <goal>pnpm</goal>
            </goals>
            <configuration>
              <arguments>run test</arguments>
            </configuration>
            <phase>test</phase>
          </execution>
          <execution>
            <id>pnpm-run-build</id>
            <goals>
              <goal>pnpm</goal>
            </goals>
            <configuration>
              <arguments>run build</arguments>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <workingDirectory>${project.build.directory}/node</workingDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
