    <property>
      <code>require(['jquery', 'xwiki-meta'], function ($, xcontext) {

  function updateFromForm(contentField) {
    const values = $('#documentInformationRequiredRights .hidden.parameters input').serializeArray();
    const data = {};
    for (var value of values) {
      if (data[value.name] === undefined) {
        data[value.name] = [value.value];
      } else {
        data[value.name].push([value.value]);
      }
    }
    for (value of values) {
      // Copy only the interesting field
      contentField.data(value.name, data[value.name]);
    }
  }

  const contentField = $('#content');

  // Update a first time to make sure the right parameters are loaded, for instance in case of back and forth with the
  // preview.
  updateFromForm(contentField);

  $(document).on('xwiki:wysiwyg:convertHTML', (event, data) =&gt; {
    const values = $('#documentInformationRequiredRights .hidden.parameters input').serializeArray();
    for (var value of values) {
      data[value.name] = value.value;
    }
  });

  $('#documentInformationRequiredRights select').on('xwiki:requiredRights:propertyUpdated', function () {
    updateFromForm(contentField);
    CKEDITOR.instances.content.execCommand('xwiki-refresh');
  });
});</code>
