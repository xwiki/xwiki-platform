<property>
<code>{{velocity}}
##
## List all the workspaces.
##
$xwiki.ssx.use('WorkspaceManager.Workspaces')
##
#set($workspaceDocumentsList = $xwiki.queryManager.xwql('select wikiServerDescriptorDocument.fullName from Document wikiServerDescriptorDocument, wikiServerDescriptorDocument.object(WorkspaceManager.WorkspaceClass) as workspaceDescriptor, wikiServerDescriptorDocument.object(XWiki.XWikiServerClass) as wikiServerDescriptor').execute())
##
#if (!$workspaceDocumentsList || $workspaceDocumentsList.size() == 0 )
There are currently no workspaces created.

#end
{{html wiki='true'}}
&lt;ul class='xlist'&gt;
  ##
  ## List workspaces.
  ##
  #foreach($workspaceDocumentName in $workspaceDocumentsList)
    #set ($workspaceWikiDocument = $services.wikimanager.getWikiFromDocumentName($workspaceDocumentName))
    #set ($workspaceWikiDescriptor = $workspaceWikiDocument.firstWikiAlias)
      &lt;li id='spWorkspaceItem' class='xitem xunderline xhighlight workspace'&gt;
        &lt;div class='xitemcontainer'&gt;
          &lt;div class='spWorkspaceName'&gt;{{html}}&lt;a href="${workspaceWikiDescriptor.homePageUrl}"&gt;${workspaceWikiDescriptor.wikiPrettyName}&lt;/a&gt;{{/html}}&lt;/div&gt;  
          &lt;div class='xspacer'&gt;&amp;nbsp;&lt;/div&gt;
        &lt;/div&gt;
      &lt;/li&gt;
  #end
## Workspace creation.
  ##
  ## Only if the current action is not inline. If it's inline, then there is already a form, and if we render the second, nested one, the DOM is messed up in IE.
  #if(!$isGuest &amp;&amp; "$!context.action" != 'inline')
    &lt;li id='spWorkspaceCreateItem' class='xitem workspace'&gt;
      &lt;div class='xitemcontainer'&gt;
        #set ($createWorkspaceDocumentReference = $services.model.createDocumentReference($xcontext.mainWikiName, 'WorkspaceManager', 'CreateNewWorkspace'))
        &lt;div id='spWorkspaceCreateLabel' class='spWorkspaceName'&gt;&lt;a href="$xwiki.getURL($createWorkspaceDocumentReference)"&gt;$msg.get('workspacemanager.createworkspace')&lt;/a&gt;&lt;/div&gt;
        &lt;div class='spacer'&gt;&amp;nbsp;&lt;/div&gt;
      &lt;/div&gt;
    &lt;/li&gt;
  #end
&lt;/ul&gt;
{{/html}}
{{/velocity}}</code>
