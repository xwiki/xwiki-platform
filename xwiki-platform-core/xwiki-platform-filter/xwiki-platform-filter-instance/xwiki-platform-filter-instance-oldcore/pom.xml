<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-filter-instance</artifactId>
    <version>7.0-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-platform-filter-instance-oldcore</artifactId>
  <name>XWiki Platform - Filter - Instance - Oldcore</name>
  <description>Extract oldcore related data from the current XWiki instance</description>
  <properties>
    <xwiki.jacoco.instructionRatio>0.70</xwiki.jacoco.instructionRatio>
    <!-- TODO: Remove once the tests have been fixed to not output anything to the console! -->
    <xwiki.surefire.captureconsole.skip>true</xwiki.surefire.captureconsole.skip>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-filter-event-xwiki</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-filter-event-user</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-filter-instance-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-filter-instance-document</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-oldcore</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Test dependencies -->
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-filter-test</artifactId>
      <version>${commons.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-filter-stream-xml</artifactId>
      <version>${commons.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-oldcore</artifactId>
      <version>${project.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <!-- Apply the Checkstyle configurations defined in the top level pom.xml file -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <configuration>
          <excludes>
              org/xwiki/filter/instance/internal/input/BaseClassEventGenerator.java,
              org/xwiki/filter/instance/internal/input/BaseObjectEventGenerator.java,
              org/xwiki/filter/instance/internal/input/DocumentInstanceInputEventGenerator.java,
              org/xwiki/filter/instance/internal/input/XWikiAttachmentEventGenerator.java,
              org/xwiki/filter/instance/internal/input/XWikiAttachmentInputProperties.java,
              org/xwiki/filter/instance/internal/input/XWikiDocumentInputProperties.java,
              org/xwiki/filter/instance/internal/input/XWikiDocumentLocaleEventGenerator.java,
              org/xwiki/filter/instance/internal/output/DocumentInstanceOutputFilterStream.java,
              org/xwiki/filter/instance/internal/output/DocumentInstanceOutputProperties.java,
              org/xwiki/filter/instance/internal/output/UserInstanceOutputProperties.java,
              org/xwiki/filter/instance/internal/output/UserInstanceOutputFilterStream.java,
              org/xwiki/filter/instance/internal/output/XWikiDocumentOutputFilterStream.java
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
