    <property>
      <code>CKEDITOR.plugins.add('wikiSource', {
  init: function(editor) {
    editor.on('mode', jQuery.proxy(function(event) {
      if (editor.mode === 'wysiwyg' &amp;&amp; editor._.previousMode === 'source') {
        // Convert from wiki syntax to HTML.
        this.convertHTML(editor, true);
      } else if (editor.mode === 'source' &amp;&amp; editor._.previousMode === 'wysiwyg') {
        // Convert from HTML to wiki syntax.
        this.convertHTML(editor, false);
      }
    }, this));
  },

  convertHTML: function(editor, convert) {
    // Disable the switch while the conversion takes place.
    setTimeout(function() {
      editor.getCommand('source').setState(CKEDITOR.TRISTATE_DISABLED);
    }, 0);
    var editable = editor.editable();
    editable.setReadOnly(true);
    var sourceButton = editor.container.findOne('.cke_button__source_icon');
    sourceButton.addClass('loading');
    jQuery.post(editor.config.htmlConverter, {
      convert: convert,
      text: editor._.previousModeData
    }, function(data) {
      editable.setData(data);
      sourceButton.removeClass('loading');
      editable.setReadOnly(false);
      editor.getCommand('source').setState(convert ? CKEDITOR.TRISTATE_OFF : CKEDITOR.TRISTATE_ON);
    });
  }
});</code>
