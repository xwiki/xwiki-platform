  <content>{{velocity}}
#set ($discard = $xwiki.ssx.use('XWiki.XWikiUserSheet'))
#set ($discard = $xwiki.ssx.use('XWiki.AdminUserProfileSheet'))
##
#set ($sheetDocumentReference = $services.model.createDocumentReference($xcontext.database, 'XWiki', 'AdminUserProfileSheet'))
#set ($sheetDocument = $xwiki.getDocument($sheetDocumentReference))
##
#set ($sectionsObjectClassName = 'XWiki.UserProfileSectionsClass')
#set ($sectionObjectClassName = 'XWiki.UserProfileSectionClass')
##
#set ($xredirect = $doc.getURL($xcontext.action, ${request.queryString}))
#set ($formToken = $services.csrf.getToken())
##
{{html clean='false' wiki='true'}}
  &lt;form action="$sheetDocument.getURL('save')" method='post'&gt;
  ## When in edit mode, the form above gets overriden so we need a div with class xform to cover all cases.
  &lt;div class='xform half'&gt;
    #set ($sectionsObject = $sheetDocument.getObject($sectionsObjectClassName))
    &lt;h2&gt;$msg.get('platform.user.profileConfigureSectionsTitle')&lt;/h2&gt;
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;label for="${sectionsObjectClassName}_${sectionsObject.number}_sections"&gt;$msg.get('platform.user.profileConfigureSectionsLabel')&lt;/label&gt;
        &lt;span class='xHint'&gt;$msg.get('platform.user.profileConfigureSectionsHint')&lt;/span&gt;
      &lt;/dt&gt;
      &lt;dd&gt;$sheetDocument.display('sections', 'edit', $sectionsObject)&lt;/dd&gt;
    &lt;/dl&gt;
    &lt;h2&gt;$msg.get('platform.user.profileConfigureSectionsAllTitle')&lt;/h2&gt;
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;a class='hasIcon icon-button add-button' href="$sheetDocument.getURL('objectadd', "classname=${sectionObjectClassName}&amp;amp;xredirect=$escapetool.url(${xredirect})&amp;amp;form_token=${formToken}")"&gt;$msg.get('platform.user.profileConfigureSectionAddButtonLabel')&lt;/a&gt;
      &lt;/dt&gt;
    #set ($sectionObjects = $sheetDocument.getObjects($sectionObjectClassName))
    #foreach ($sectionObject in $sectionObjects)
      &lt;dt&gt;
        &lt;a class='hasIcon icon-button remove-button' href="$sheetDocument.getURL('objectremove', "classname=${sectionObjectClassName}&amp;amp;classid=${sectionObject.number}&amp;amp;xredirect=$escapetool.url(${xredirect})&amp;amp;form_token=${formToken}")"&gt;$msg.get('platform.user.profileConfigureSectionRemoveButtonLabel')&lt;/a&gt;
        &lt;label for="${sectionObjectClassName}_${sectionObject.number}_id"&gt;$msg.get('platform.user.profileConfigureSectionIdLabel')&lt;/label&gt;
        &lt;span class='xHint'&gt;$msg.get('platform.user.profileConfigureSectionIdHint')&lt;/span&gt;
      &lt;/dt&gt;
      &lt;dd&gt;$sheetDocument.display('id', 'edit', $sectionObject)&lt;/dd&gt;

      &lt;dt&gt;
        &lt;label for="${sectionObjectClassName}_${sectionObject.number}_name"&gt;$msg.get('platform.user.profileConfigureSectionNameLabel')&lt;/label&gt;
        &lt;span class='xHint'&gt;$msg.get('platform.user.profileConfigureSectionNameHint', 'http://platform.xwiki.org/xwiki/bin/view/DevGuide/InternationalizingApplications')&lt;/span&gt;
      &lt;/dt&gt;
      &lt;dd&gt;$sheetDocument.display('name', 'edit', $sectionObject)&lt;/dd&gt;

      &lt;dt&gt;
        &lt;label for="${sectionObjectClassName}_${sectionObject.number}_properties"&gt;$msg.get('platform.user.profileConfigureSectionPropertiesLabel')&lt;/label&gt;
        &lt;span class='xHint'&gt;$msg.get('platform.user.profileConfigureSectionPropertiesHint', ['XWiki.XWikiUsers'])&lt;/span&gt;
      &lt;/dt&gt;
      &lt;dd&gt;$sheetDocument.display('properties', 'edit', $sectionObject)&lt;/dd&gt;
    #end
    ## Avoid duplicating the save button for edit mode.
    #if ($xcontext.action != 'edit' &amp;&amp; $xcontext.action != 'inline')
      &lt;dt&gt;
        &lt;br/&gt;
        &lt;span class='buttonwrapper'&gt;
          &lt;input class='button' type='submit' name='save' value="$msg.get('platform.user.profileConfigureSaveButtonLabel')"/&gt;
        &lt;/span&gt;
        &lt;input type='hidden' name='xredirect' value="$xredirect" /&gt;
        &lt;input type='hidden' name='form_token' value="$formToken" /&gt;
      &lt;/dt&gt;
    #end
    &lt;/dl&gt;
  &lt;/div&gt;
  &lt;/form&gt;
{{/html}}
{{/velocity}}</content>
