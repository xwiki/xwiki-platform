<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-dashboard</artifactId>
    <version>10.5-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-platform-dashboard-ui</artifactId>
  <name>XWiki Platform - Dashboard - UI</name>
  <packaging>xar</packaging>
  <description>Dashboard Application</description>
  <properties>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>Dashboard Application</xwiki.extension.name>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-dashboard-macro</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-index-ui</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <!-- Required for the Macro Wizard that is used by the Gadget Wizard. -->
      <groupId>org.xwiki.contrib</groupId>
      <artifactId>application-ckeditor-ui</artifactId>
      <type>xar</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-plugin</artifactId>
        <configuration>
          <entries>
            <entry>
              <document>Dashboard.WebHome</document>
              <type>customizable</type>
            </entry>
          </entries>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
