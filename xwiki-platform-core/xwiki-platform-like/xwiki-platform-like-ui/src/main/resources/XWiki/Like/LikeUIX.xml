    <property>
      <code>define('xwiki-like-messages', {
  prefix: 'like.',
  keys: [
    "toggle.hint.unlike",
    "toggle.hint.like",
    "newlike.success",
    "newlike.error",
    "unlike.success",
    "unlike.error",
    "likers.link.zero",
    "likers.link.one",
    "likers.link.many",
    "likers.link.title"
  ]
});
require(['jquery', 'xwiki-meta', 'xwiki-l10n!xwiki-like-messages'], function ($, xm, l10n) {
  var likeUIXReference = XWiki.Model.resolve('XWiki.Like.LikeUIX', XWiki.EntityType.DOCUMENT);
  var likeUIXurl = new XWiki.Document(likeUIXReference).getURL('get');

  var likeClick = function () {
    var isLiked = $('#is-liked').val() == "true";
    if (!isLiked) {
      triggerLike();
    } else {
      triggerUnlike();
    }
  };

  var getLikersLinkText = function(nb) {
    // conditional parametrized translation formatting seems to not work with the javascript l10n API,
    // so we're using this fallback method with 3 keys
    return l10n.get('likers.link.' + (nb == 0 ? 'zero' : (nb &lt;= 1 ? 'one' : 'many')), nb);
  }

  var triggerLike = function () {
     var likeButton = $('.like-button').first();
     $.post(likeUIXurl, {
        'xaction': 'like',
        'form_token': xm.form_token,
        'document': XWiki.Model.serialize(xm.documentReference)
     }).then(data =&gt; {
       likeButton.removeClass('btn-default');
       likeButton.addClass('btn-primary');
       likeButton.html(data.buttonhtml);
       likeButton.attr('title', l10n.get('toggle.hint.unlike'));
       let likersLink = likeButton.siblings('.like-number').find('a');
       likeButton.siblings('.like-number').attr('data-like-count', data.counter);
       likersLink.text(getLikersLinkText(data.counter));
       likersLink.attr('title', l10n.get('likers.link.title', data.counter));
       $('#is-liked').val('true');
       new XWiki.widgets.Notification(l10n.get('newlike.success'), 'done');
     }).catch(() =&gt; {
       new XWiki.widgets.Notification(l10n.get('newlike.error'), 'error');
     });
  };

  var triggerUnlike = function () {
    var unlikeButton = $('.like-button').first();
    $.post(likeUIXurl, {
      'xaction': 'unlike',
      'form_token': xm.form_token,
      'document': XWiki.Model.serialize(xm.documentReference)
    }).then(data =&gt; {
      unlikeButton.removeClass('btn-primary');
      unlikeButton.addClass('btn-default');
      unlikeButton.html(data.buttonhtml);
      unlikeButton.attr('title', l10n.get('toggle.hint.like'));
      var likersLink = unlikeButton.siblings('.like-number').find('a');
      unlikeButton.siblings('.like-number').attr('data-like-count', data.counter);
      likersLink.text(getLikersLinkText(data.counter));
      likersLink.attr('title', l10n.get('likers.link.title', data.counter));
      $('#is-liked').val('false');
      new XWiki.widgets.Notification(l10n.get('unlike.success'), 'done');
    }).catch(() =&gt; {
      new XWiki.widgets.Notification(l10n.get('unlike.error'), 'error');
    });
  };
  $('.like-button').on('click', likeClick);
});</code>
