  #set ($monthStart = $!xwiki.jodatime.getDateTime($currentMonth.start))
  #set ($monthEnd = $!xwiki.jodatime.getDateTime($currentMonth.end))
  #set ($dtf = $xwiki.jodatime.getDateTimeFormatterForPattern($pattern))
