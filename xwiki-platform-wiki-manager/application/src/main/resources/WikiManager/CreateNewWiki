      #elseif ($result == $Exception.ERROR_XWIKI_USER_INACTIVE)
        $msg.get("error.ERROR_XWIKI_USER_INACTIVE")
      #else
        $msg.get("wikimanager.errorcreatewiki", [$wikiname, $result])
      #end
    &lt;/font&gt;
  #end
#end

