<assembly>
  <id>${xwiki.db}</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>com.xpn.xwiki:xwiki-web-standard</include>
      </includes>
      <outputDirectory>webapps/xwiki</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>com.xpn.xwiki:xwiki-database</include>
      </includes>
      <outputDirectory>/database</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/resources/jetty</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources</directory>
      <outputDirectory>webapps/xwiki/WEB-INF</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
