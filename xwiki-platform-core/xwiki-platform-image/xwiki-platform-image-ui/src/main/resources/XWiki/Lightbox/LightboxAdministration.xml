## To avoid mixing wiki syntax with html, unwrap the result of the xproperty displayer.
#macro (stripHTMLMacro $displayOutput)
  $stringtool.removeEnd($stringtool.removeStart($displayOutput, '{{html clean="false" wiki="false"}}'), '{{/html}}')
#end
#macro (showProperty $propertyName)
  &lt;dl&gt;
    &lt;dt&gt;
      #set ($propertyClass = $xclass.get($propertyName))
      &lt;label#if ($editing) for="${lightboxConfigClassName}_0_${propertyName}"#end&gt;
        $escapetool.xml($propertyClass.translatedPrettyName)
      &lt;/label&gt;
      &lt;span class="xHint"&gt;
        $escapetool.xml($services.localization.render($propertyClass.hint))
      &lt;/span&gt;
    &lt;/dt&gt;
    #set ($displayOutput = $lightboxConfigDoc.display($propertyName, $mode))
    &lt;dd&gt;#stripHTMLMacro($displayOutput)&lt;/dd&gt;
  &lt;/dl&gt;
#end
{{/velocity}}

{{velocity}}
#set ($lightboxConfigClassName = 'XWiki.Lightbox.LightboxConfigurationClass')
#set ($lightboxConfigDoc = $xwiki.getDocument('XWiki.Lightbox.LightboxConfiguration'))
#set ($discard = $lightboxConfigDoc.use($lightboxConfigClassName))
#set ($lightboxConfigClass = $xwiki.getDocument($lightboxConfigClassName))
#set ($xclass = $lightboxConfigClass.getxWikiClass())
#set ($editing = $xcontext.action == 'edit' || $xcontext.action == 'admin')
#set ($mode = "#if ($editing)edit#{else}view#end")
{{html clean="false"}}
#if ($xcontext.action == 'admin')
  &lt;form action="$lightboxConfigDoc.getURL('save')" class="xform"&gt;
    &lt;div class="hidden"&gt;
      &lt;input type="hidden" name="form_token" value="$!escapetool.xml($services.csrf.token)"/&gt;
    &lt;/div&gt;
#else
  &lt;div class="xform"&gt;
#end
  #showProperty('isLightboxEnabled')
#if ($xcontext.action == 'admin')
  &lt;p&gt;
    &lt;input type="submit" class="btn btn-primary" name="action_saveandcontinue"
      value="$escapetool.xml($services.localization.render('save'))"/&gt;
  &lt;/p&gt;
&lt;/form&gt;
#else
&lt;/div&gt;
#end
{{/html}}
{{/velocity}}</content>
