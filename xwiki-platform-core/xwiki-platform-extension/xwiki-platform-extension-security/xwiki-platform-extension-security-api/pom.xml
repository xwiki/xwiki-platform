<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-extension-security</artifactId>
    <version>16.3.2-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-platform-extension-security-api</artifactId>
  <name>XWiki Platform - Extension - Security - API</name>
  <packaging>jar</packaging>
  <description>API for the Extensions Security Vulnerabilities Application</description>
  <properties>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>Security Vulnerabilities API</xwiki.extension.name>
    <!-- Category for the Extension Manager -->
    <xwiki.extension.category>api</xwiki.extension.category>
    <xwiki.jacoco.instructionRatio>0.59</xwiki.jacoco.instructionRatio>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-livedata-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-extension-index</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-configuration-default</artifactId>
      <version>${project.version}</version>
    </dependency>
    <!-- Test dependencies -->
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-tool-test-component</artifactId>
      <version>${commons.version}</version>
      <scope>test</scope>
    </dependency>
    <!-- Required to mock XWikiDocument. -->
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>